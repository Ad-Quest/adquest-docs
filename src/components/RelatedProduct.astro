---
import { z } from "astro:schema";

type Props = z.infer<typeof props>;

const props = z.object({
	header: z.string(),
	href: z.string(),
	product: z.string().optional(),
});

const { header, href } = props.parse(Astro.props);
---

<div class="mt-0!">
	<strong>
		<a
			href={href}
			class="text-black! decoration-[color:var(--orange-accent-200)]"
			>{header}</a
		>
	</strong>
	<slot />
</div>
